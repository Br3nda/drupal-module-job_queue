<?php

function job_queue_install() {
  switch ($GLOBALS['db_type']) {
    case 'mysql':
    case 'mysqli':
      db_query('CREATE TABLE {job_queue} (
        jqid int NOT NULL,
        created int NOT NULL,
        description varchar(255) NOT NULL,
        function varchar(255) NOT NULL,
        arguments text NOT NULL,
        PRIMARY KEY (jqid)
      )');
      break;
  }
}
